doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title #{title}
		link(href="bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css")
		link(href="css/css.css" rel="stylesheet" type="text/css")
		script(src="jquery/dist/jquery.min.js" type="text/javascript")
		script(src="bootstrap/dist/js/bootstrap.min.js" type='text/javascript')
		script(src="js/js.js" type="text/javascript")
	body
		body.login
		.container
			.row.text-center
				.col-md-12
					.login-form
						.login-header
							img(src="imgs/logo.png").img-responsive.center-block
							p #{title}
						form
							.errorMessage
								span.glyphicon.glyphicon-remove-sign
								b 请输入邮箱/公司名称/密码
							.form-group
								input(type="email" placeholder="登录邮箱").form-control#exampleInputEmail1
							.form-group
								input(type="text" placeholder="公司名称").form-control#exampleInputCompany
							.form-group
								input(type="password" placeholder="密码").form-control#exampleInputPassword
							.form-group
								input(type="password" placeholder="确认密码").form-control#exampleInputConfirmPassword
							input(type="button" value="注册").btn.btn-primary#register
						.login-bottom
							span 已经有帐号了?去 
								a(href="login") 登录 
				.col-md-12.login-message
					p © 米拓湘 ICP 备 07500799 号 - 5
					p Powered by 
						a(href="#") MetInfo