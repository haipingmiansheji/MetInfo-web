doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title #{title}
		link(href="bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css")
		link(href="css/css.css" rel="stylesheet" type="text/css")
		script(src="jquery/dist/jquery.min.js" type="text/javascript")
		script(src="bootstrap/dist/js/bootstrap.min.js" type='text/javascript')
		script(src="js/js.js" type="text/javascript")
	body.login
		.container
			.row.text-center
				.col-md-12
					.login-form
						.login-header
							img(src="imgs/logo.png").img-responsive.center-block
							p #{title}
						form
							.errorMessage
								span.glyphicon.glyphicon-remove-sign
								b 请输入用户名密码
							.form-group
								input(type="email" placeholder="用户名/邮箱/手机").form-control#exampleInputEmail1
							.form-group
								input(type="password" placeholder="密码").form-control#exampleInputPassword
							input(type="button" value="登录").btn.btn-primary#login
						.login-bottom
							span 没有帐号?去 
								a(href="register") 注册 
								a / 
								a(href="findpass") 忘记密码？
				.col-md-12.login-message
					p © 米拓湘 ICP 备 07500799 号 - 5
					p Powered by 
						a(href="#") MetInfo

		