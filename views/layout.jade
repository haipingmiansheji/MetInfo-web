doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title #{title}
		link(href="bootstrap/dist/css/bootstrap.min.css" type="text/css" rel="stylesheet")
		link(href="css/css.css" rel="stylesheet" type="text/css")
		script(src="jquery/dist/jquery.min.js" type="text/javascript")
		script(src="bootstrap/dist/js/bootstrap.min.js" type="text/javascript")
		script(src="js/js.js" type="text/javascript")
	body
		//- 头部导航
		.navbar.navbar-fixed-top.nav-bg
			.container
				//- logo
				.navbar-header
					button(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false").navbar-toggle.collapsed
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a(href="/").navbar-brand
						img(src='imgs/logo.jpg' alt='logo')
				//- 右侧导航
				.collapse.navbar-collapse#bs-example-navbar-collapse-1
					//- 注册登录
					ul.nav.navbar-nav.navbar-right.nav-pills.show#user-static
						li
							a(href="/login").btn.btn-default 登录
						li.active
							a(href="/register").btn.btn-info 注册
					ul.nav.navbar-nav.navbar-right.nav-pills.hidden#user-success
						li
							a(href="/login").btn.btn-default 
						li.active
							a(href="javascript:;").btn.btn-info#exit 退出
					//- 导航
					ul.nav.navbar-nav.navbar-right#menu
						li
							a(href="/download") 下载 MetInfo
								span.badge 免费
						li
							a(href="/product") 模版
						li
							a(href="/case") 案例
						li
							a(href="/help") 帮助
						li
							a(href="/bbs") 社区

	block content	